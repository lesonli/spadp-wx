/**index.wxss**/
.topPanel{
  background: #5677fc;
  min-height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.topPanel .address{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  min-height: 50px;
  width: 100%;
}
.topPanel .address .text{
  color:white;
  font-size: 14pt;
  padding-left: 5px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 1000rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}