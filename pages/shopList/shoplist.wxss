/* shoplist.wxss */
@import "/pages/template/shopListItem.wxss";
.shop-list-view{
  background: #eee;
  height: 100%;
}
.shop-list-view .search-bar{
  height: 120rpx;
  background: #5677fc;
  position: relative;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.search-bar .search-input{
  background: #FFF;
  width: 90%;
  border-radius: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
  font-size: 14px;
  padding-left: 70rpx;
  padding-right: 70rpx;  
  position: relative;
  box-sizing: border-box;
}
.search-bar  .search-input .search-icon{
  position: absolute;
  top: 8px;
  left: 10px;
}
.search-bar  .search-input .clear-icon{
  position: absolute;
  top: 6px;
  right: 10px;
}
.filter-bar{
  height: 90rpx;
  background: #FFF;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-around;
  line-height: 90rpx;
}
.filter-bar .menu .on{
  color: #5677fc;
}
.filter-bar .menu text{
  color: #888;
  font-size: 14px;
}
.filter-bar .menu image{
  width: 15px;
  height: 15px;
  vertical-align: middle;
  margin-left: 8px;
}
.search-tags{
  position: relative;
}
.search-tags .title{
  padding: 20rpx;
  color: #888;
  font-size:18px;
}
.search-tags image{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.search-tags .tags{
  background: #FFF;
  padding-bottom: 20rpx;
  min-height: 80rpx;
}
.search-tags .tags button{
  border-color: #ddd;
  color: #888;
  margin:20rpx 0 0 20rpx;
}
.search-tags .tags button:first-child{
  border-color: #5677fc;
  color: #5677fc;
}
.hover{
  opacity: 0.8;
}
.shop-list{
  background: #FFF;  
  position: fixed;
  top: 212rpx;
  bottom: 0;
  left: 0;
  right: 0;
}
.shop-item:first-child{
  border-top: none;
}
.loadfinish{
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size:16px;
  color: #888;
  background: #eee;
}
.filter-pannel{
  position: fixed;
  top: 212rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
}
.filter-pannel .location{
  height: 600rpx;
  width: 100%;
  background: #FFF;
  opacity: 1;
}
.filter-pannel .category{
  width: 100%;
  background: #FFF;
  opacity: 1;
}
.filter-pannel .mask{
  height: 100%;
  width: 100%;
  background: #000;
  opacity: 0.6;
}
.filter-pannel .filter-pannel-list{
  height:36px;
  line-height: 36px;
  border-bottom: 1rpx solid #ddd;
  margin-left: 20rpx;
  font-size: 14px;
}
.filter-pannel .filter-pannel-list.on{
  color: #5677fc;
}