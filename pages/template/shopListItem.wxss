.shop-item{
  margin-left: 20rpx;
  background: #FFF;
  height: 150rpx;
  border-top:1rpx solid #ddd;  
  border-bottom:1rpx solid #ddd;
  padding:20rpx 20rpx 20rpx 170rpx;
  position: relative;
}
.shop-item+.shop-item{
  border-top-width: 0;  
}
.shop-item .shop-img{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top:20rpx;
  left:0;
  border:1rpx solid #ddd;

}
.shop-item .shop-name{
  color: #353535;
  font-size: 18px;
  font-weight: 500;
  margin-top: 5px;  
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  display:block;
}
.shop-item .shop-info{
  color: #888;
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 10px;
}
.shop-item .shop-info .renjun{
  margin-left:10px;
}
.shop-item .shop-district{
  color: #888;
  font-size: 14px;
}
.shop-item .shop-icon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:80rpx;
  right:40rpx;
}
.shop-item .shop-tags{
  color: #888;
  font-size: 14px;
  margin-left:10px;
}


.star{
    display: inline-block;
    width: 66px;
    height: 12px;
    vertical-align: middle;
    background: url(data:image/png;base64,) no-repeat;
